<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>エラー</title>
</head>
<body class="overflow-scroll overflow-x-hidden">
    <div class="container mx-auto max-w-[600px]">
        <div class="mx-auto px-8 mt-10">

            <img class="object-contain w-full"src="{{constant('music_matching_app\\Bootstrap::ENTRY_URL')}}img/logo.png" alt="">

            <div class="items-center mt-8">
                <h2 class="font-bold mb-4 text-xl">エラーが発生しました。</h2>

                <p class="text-gray-700 text-sm mb-10">
                    {{errMsg | nl2br }}
                </p>

                {% if type == 'login' %}
                    <button onclick="location.href='{{constant('music_matching_app\\Bootstrap::ENTRY_URL')}}login.php'" class="bg-gray-800 hover:bg-gray-700 text-white  {{constant('music_matching_app\\master\\initMaster::BUTTON_MODEL')}} ">ログイン画面へ</button>
                {% elseif type == 'regist' %}
                    <button onclick="location.href='{{constant('music_matching_app\\Bootstrap::ENTRY_URL')}}accountCreate.php'" class="bg-gray-800 hover:bg-gray-700 text-white  {{constant('music_matching_app\\master\\initMaster::BUTTON_MODEL')}} ">新規登録画面へ</button>
                {% endif %}

            </div>
        </div>
    </div>
</body>
</html>
