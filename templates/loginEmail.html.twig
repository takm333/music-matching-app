                function onSubmit(token) {
                    document.getElementById("login_form").submit();
                }
                </script>

                <div class="pb-2">
                    <a href="{{constant('music_matching_app\\Bootstrap::ENTRY_URL')}}forgotPassword.php" class="text-gray-700 text-sm  underline ">パスワードを忘れた方はこちら</a>
                </div>

                <div>
                    <button onclick="location.href='{{constant('music_matching_app\\Bootstrap::ENTRY_URL')}}login.php'" class="border border-gray-900 text-gray-800 hover:text-gray-500  {{constant('music_matching_app\\master\\initMaster::BUTTON_MODEL')}} ">他のログイン方法を見る</button>
                </div>
            </div>

        </div>
