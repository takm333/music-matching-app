<body class="overflow-scroll">
    <div class="container mx-auto max-w-[600px]">
        <div class="mx-auto px-8 mt-10">

            <img class="object-contain w-full"src="{{constant('music_matching_app\\Bootstrap::ENTRY_URL')}}/img/logo.png" alt="">

            <div class="items-center mt-8">
                <h2 class="font-bold mb-4 text-xl">メールアドレスでログイン</h2>

                <form id="login_form" method="post" action="">
                    {% include 'login_form.html.twig' %}

                    <div>
                        <button class="bg-gray-800 hover:bg-gray-700 text-white  {{constant('music_matching_app\\master\\initMaster::BUTTON_MODEL')}} g-recaptcha" data-sitekey="6LfYvUcpAAAAALJ83KRDyBYqTWt6Pa3Z02YHNLRK" data-callback='onSubmit' data-action='submit'>ログインする</button>
